# Application Settings
APP_NAME=Social Graph Crawler
APP_VERSION=1.0.0
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_V1_PREFIX=/api/v1
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/social_graph
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# External API Credentials
# Reddit API (optional for public API)
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USER_AGENT=SocialGraphCrawler/1.0

# GitHub API (recommended for better rate limits)
GITHUB_TOKEN=
GITHUB_API_BASE=https://api.github.com

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Crawler Settings
MAX_CRAWL_DEPTH=3
MAX_NODES_PER_JOB=1000
CRAWLER_CONCURRENCY=10
REQUEST_TIMEOUT=30

# Graph Settings
DEFAULT_GRAPH_DEPTH=2
MAX_GRAPH_NODES=5000
